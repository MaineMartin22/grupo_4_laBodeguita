<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <link rel="stylesheet" href="/css/estilosReg.css">
      </head>
<body>
    <header class="header">
        <%- include("./partials/navBar") %>
    </header>
    <main>
        <section class="prodList">
        <div class="prodList-div">
        <h4>Lista de productos</h4>
        <h4>Haz click para ver y editar</h4>
       <div class="prodList-ul">
        <% users.forEach(tint => { %>
            <div>
            <div>
                <div>
                <h3><%= tint.nombre %> - </h3>
                <h3> ID Nro: <%= tint.id %> </h3>
                </div>
            </div>
            <div>
                <form action="/users/edit/<%=tint.id%>" method="get">
                    <button type="submit">Editar</button>
                </form>
            <form action="/users/delete/<%= tint.id %>?_method=delete" method="POST">
                <button type="submit">Borrar</button>
            </form>
            </div>
        </div>
        </div>
        <% }) %>
    </div>
    </div>
</section>
    </main>
    <footer class="footer">
    <%- include("./partials/footer") %>
  </footer>
  </body>
  <!-- BOOTSTRAP JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>