<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <link rel="stylesheet" href="/css/estilosReg.css">
      </head>
<body>
    <header class="header">
        <%- include("./partials/navBar") %>
    </header>
    <main>
    <div class="create-div">
        <% tinto.forEach(function(tint) { %>
            <% if (tint.id == idProd) { %>
    <form method="POST" action="<%= tint.id %>" class="create" enctype="multipart/form-data">
            <h3>Editando producto: <%=tint.name%> - ID número: <%= tint.id %></h3>
            <div>
            <input type="text" name="name" id="name" value="<%=tint.name%>">
            <h3>Tipo</h3>
            <select name="tipo" id="tipo">
            <% if (tint.tipo == "Rosado") { %>
                <option><%=tint.tipo%></option>
                <option>Tinto</option>
                <option>Blanco</option>
            <% } else if (tint.tipo == "Tinto" ) { %> 
                <option><%=tint.tipo%></option>
                <option>Rosado</option>
                <option>Blanco</option>
            <% } else { %>
                <option><%=tint.tipo%></option>
                <option>Rosado</option>
                <option>Tinto</option>
            <% };%>
        </select>
        <h3>Oferta</h3>
        <select name="oferta" id="oferta">
            <option>true</option>
            <option>false</option>
        </select>

            <h3>Precio</h3>
            <input type="number" name="precio" id="precio" value="<%=tint.precio%>">
            <h3>Bodega</h3>
            <select name="bodega" id="bodega">
                <% if (tint.bodega === "Malbec") { %>
                    <option><%=tint.bodega%></option>
                    <option>Santa Julia</option>
                    <option>Norton</option>
                <% } else if (tint.bodega === "Santa Julia" ) { %> 
                    <option><%=tint.bodega%></option>
                    <option>Norton</option>
                    <option>Malbec</option>
                <% } else { return%>
                    <option><%=tint.bodega%></option>
                    <option>Malbec</option>
                    <option>Santa Julia</option>
                <% }; %>
            </select>
            <h3>% de alcohol</h3>
            <input type="text" name="alcohol" id="alcohol" value="<%=tint.alcohol%>">
            <h3>Descuento en número entero</h3>
            <input type="text" name="descuento" id="descuento" value="<%=tint.descuento%>">
            <h3>Tamaño</h3>
            <select name="tamano" id="tamano">
                    <option>750ml</option>
                    <option>1000ml</option>
                    <option>1250ml</option>
            </select>
            <h3>Color</h3>
            <input type="text" name="color" id="color" value="<%=tint.color%>">
            <label for="imagen">Seleccionar imagen</label>
            <input type="file" id="imagen" name="imagen">
            <button type="submit">Enviar</button>
            <button type="reset">Borrar</button>
    </div>
</form>
<% } %>
<% }) %>
</div>
</main>
<footer class="footer">
    <%- include("./partials/footer") %>
  </footer>
  </body>
  <!-- BOOTSTRAP JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>