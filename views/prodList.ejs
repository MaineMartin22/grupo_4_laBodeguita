<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <link rel="stylesheet" href="/css/estilosReg.css">
      </head>
<body>
    <header class="header">
        <%- include("./partials/navBar") %>
    </header>
    <main>
        <section class="prodList">
        <div class="prodList-div">
        <h4>Lista de productos</h4>
        <h4>Haz click para ver y editar</h4>
       <div class="prodList-ul">
        <% productos.forEach(tint => { %>
            <div>
            <div>
                <div>
                <h5><%= tint.name %>- </h5>
                <h4> ID: <%= tint.id %> </h4>
                </div>
            </div>
            <div>
                <form action="/product/edit/<%=tint.id%>" method="get" enctype="multipart/form-data">
                    <button type="submit">Editar</button>
                </form>
            <form action="/product/delete/<%= tint.id %>?_method=delete" method="POST" enctype="multipart/form-data">
                <button type="submit"">Borrar</button>
            </form>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
</section>
    </main>
    <footer class="footer">
    <%- include("./partials/footer") %>
  </footer>
  </body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</html>