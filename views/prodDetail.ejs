<body>
    <header class="header">
        <%- include("./partials/navBar") %>
    </header>
<main class="main-vinos">
<section class="section-vinos">
    <div class="sect-search" id="sect-search-main">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="search" name="search" id="search" placeholder="Encontrá lo que estas buscando">
        <button class="btn btn-outline-light" type="submit">Búscar</button>
        </form>
    </div>
    <h2 class="vin-tipos-title">Vino Tinto</h2>
    <div class="vin-tipos">
        <% Product.forEach(function(tint) { %>      
        <% if (tint.tipo === "Tinto") { %>
        <div class="vin-prod">
            <div class="vin-img">
                <% if (tint.oferta === "true") { %>
                    <i class="fa-solid fa-star"></i>
                <% } %>
                <img class="vin-img-jpg" src=/images/products/<%=tint.imagen%> alt="">
            </div>
            <div class="vin-text">
                <h4 class="vin-title"><%=tint.name%></h4>
                <div>
                    <a href="#<%=tint.collapse%>" class="btn" role="button" data-bs-toggle="collapse" aria-controls="<%=tint.collapse%>" aria-expanded="false">Descripción</a>
                    <a href="#" class="addCar btn"><i class="fa-solid fa-plus"></i>  Agregar</a>
                </div>
                    <div class="div-collapse collapse" id="<%=tint.collapse%>">
                        <div class="div--colapse">
                        <p>Tamaño: <%=tint.tamaño%> </p>
                        <% if (tint.oferta === "true") { %>
                            <p><b class="price">Precio: $<%= tint.precio-(tint.precio * (tint.descuento/100))%></b> $<del><%= tint.precio%></del></p>
                        <% } else {%> 
                            <p><b class="price">Precio: $<%=tint.precio%></b></p>
                        <% } %> 
                        <a class="vin-butt" href="/product/<%=tint.id%>" target="_blank">Más información</a>
                    </div>
                    </div>
            </div>
            </div>
            <% } %>
            <% }); %>
